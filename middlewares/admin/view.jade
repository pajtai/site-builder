doctype html
html(lang="en")
    head
        title Admin
        link(rel="stylesheet", href="/vendor/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/styles.css")
    body#page
        .container-fluid
            .row
                .cols.col-md-12
                    h3 Modules
            .row
                .cols.col-md-12
                    ul
                        for module in modules
                            li
                                a(href="/admin/module/#{module._id}")!= module._id
            .row
                .cols.col-md-12
                    h3 Pages
            .row
                .cols.col-md-12
                    ul
                        for page in pages
                            li
                                a(href="/#{module._id}/edit")!= page._id
